<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Добро пожаловать в игру">
        <ListPreference
            android:title="Кол-во игроков"
            android:summary="Выберите количество игроков"
            android:key="listPref"
            android:defaultValue="digiGreen"
            android:entries="@array/listArray"
            android:entryValues="@array/listValues" />
        <Preference
            android:title="Запуск игры"
            android:key="@string/startGame"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Настройки игры">
        <EditTextPreference
            android:name="EditText Preference"
            android:summary="This allows you to enter a string"
            android:defaultValue="Nothing"
            android:title="Edit This Text"
            android:key="editTextPref" />
        <RingtonePreference
            android:name="Ringtone Preference"
            android:summary="Select a ringtone"
            android:title="Ringtones"
            android:key="ringtonePref" />
    </PreferenceCategory>
</PreferenceScreen>